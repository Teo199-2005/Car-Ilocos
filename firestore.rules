rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is owner of resource
    function isOwner(ownerId) {
      return request.auth != null && request.auth.uid == ownerId;
    }
    
    // Users collection - users can read/write their own data, admins can access all
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    // Admins collection - only admins can access
    match /admins/{adminId} {
      allow read, write: if isAdmin();
    }
    
    // Vehicles collection - read for all authenticated, write for owners/admins
    match /vehicles/{vehicleId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (isOwner(resource.data.ownerId) || isAdmin());
    }
    
    // Rentals collection - customers/owners/admins can access relevant rentals
    match /rentals/{rentalId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (isOwner(resource.data.customerId) || 
         isOwner(resource.data.ownerId) || 
         isAdmin());
    }
    
    // Notifications - users see their notifications, admins see all
    match /notifications/{notificationId} {
      allow read: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         resource.data.userId == null || 
         isAdmin());
      allow write: if isAdmin();
    }
    
    // Settings - read for all authenticated, write for admins only
    match /settings/{settingId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Archived collections - admin access only
    match /archived_users/{docId} {
      allow read, write: if isAdmin();
    }
    
    match /archived_rentals/{docId} {
      allow read, write: if isAdmin();
    }
  }
}